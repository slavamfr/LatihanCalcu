<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="1">

        <!-- Text di atas -->
        <TextView
            android:id="@+id/operationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:text=""
            android:textColor="#757575"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:layout_row="0" />

        <!-- Text di bawah -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="48sp"
            android:text="0"
            android:textColor="#757575"
            android:padding="24dp"
            android:layout_row="1" />

    </GridLayout>

    <View
        android:layout_width="170dp"
        android:layout_height="5dp"
        android:background="@drawable/line"
        android:layout_margin="3dp"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:padding="16dp">

        <!-- Baris 1 -->
        <Button android:id="@+id/btnClear"
            android:text="AC"
            style="@style/CalcButton"
            android:backgroundTint="#FFA500"
            android:textColor="#FFFFFF"
            />

        <Button android:id="@+id/btnPercent"
            android:text="%"
            style="@style/CalcButton"
            android:backgroundTint="#EEEEEE"
            android:textColor="#FFA500" />

        <Button android:id="@+id/btnDivide"
            android:text="/"
            style="@style/CalcButton"
            android:backgroundTint="#EEEEEE"
            android:textColor="#FFA500" />

        <Button android:id="@+id/btnMultiply"
            android:text="x"
            style="@style/CalcButton"
            android:backgroundTint="#EEEEEE"
            android:textColor="#FFA500" />

        <!-- Baris 2 -->
        <Button android:id="@+id/btn7"
            android:text="7"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btn8"
            android:text="8"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btn9"
            android:text="9"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btnSubtract"
            android:text="-"
            style="@style/CalcButton"
            android:backgroundTint="#EEEEEE"
            android:textColor="#FFA500" />

        <!-- Baris 3 -->
        <Button android:id="@+id/btn4"
            android:text="4"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btn5"
            android:text="5"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btn6"
            android:text="6"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btnAdd"
            android:text="+"
            style="@style/CalcButton"
            android:backgroundTint="#EEEEEE"
            android:textColor="#FFA500" />

        <!-- Baris 4 -->
        <Button android:id="@+id/btn1"
            android:text="1"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btn2"
            android:text="2"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btn3"
            android:text="3"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btnEquals"
            android:text="="
            style="@style/CalcButton"
            android:layout_rowSpan="2"
            android:backgroundTint="#FFA500"
            android:textColor="#FFFFFF" />

        <!-- Baris 5 -->
        <Button android:id="@+id/btn0"
            android:text="0"
            android:layout_columnSpan="2"
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />

        <Button android:id="@+id/btnDot"
            android:text="."
            style="@style/CalcButton"
            android:backgroundTint="#FFFFFF"
            android:textColor="#757575" />
    </GridLayout>

</LinearLayout>
